<%= render "shared/second-header"%>

<div class='transaction-contents'>
  <div class='transaction-main'>
    <h1 class='transaction-title-text'>
      <p>商品の削除が完了しました</p>
      <%# <p>発送までしばらくお待ち下さい</p> %>
    </h1>
    <%# 購入内容の表示 %>
    <div class='buy-item-info'>
      <%#= image_tag @item[0].image.variant(resize: '150x150'), class: 'buy-item-img' %>      
      <div class='buy-item-right-content'>
        <h2 class='buy-item-text'>
          <%#= @item[0].title %>
        </h2>
        <div class='buy-item-price'>
          <p class='item-price-text'><%#= @item[0].price %></p>
          <p class='item-price-sub-text'><%#= "　#{@item[0].delivery_fee.name}" %></p>
        </div>
      </div>
    </div>
    <%# /購入内容の表示 %>

    <div class='buy-btn'>
      <%= link_to "トップページへ戻る", "/" , class: "buy-red-btn" %>
    </div>
  </div>
</div>
<%= render "shared/second-footer"%>